%li.flickr.image-post
  %a{href: instagram[:url]}
    .title.place-name
      %h3
        = image_tag "flickrfavicon.png"
        - if instagram[:text].blank?
          flickr post
        - else
          = raw(instagram[:text])
  .post-body
    = image_tag instagram[:image_tag]
  .checkin-text.caption
    = instagram[:place_name]
    .like= link_to "Like", "#", { "data-like" => instagram.to_json }
    .make-me-famous
      <a href="http://twitter.com/share" class="twitter-share-button" data-url='http://nerdnearby.com' data-text="Found near me: #{instagram[:url]}" data-count="none" data-via="nerdnearby">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

