%li.tweet.image-post
  %a{href: tweet[:url]}
    .title.username
      %h3
        = image_tag "twitterfavicon.png"
        = "@#{tweet[:user]}"
  .post-body
    = image_tag tweet[:image_tag]
  .caption
    .tweet= raw(tweet[:text])
    = pretty_time(tweet[:post_time])
    .like{ "data-like" => tweet.to_json }
      - if(tweet[:id])
        Someone liked this by you!
      - else
        = link_to "Like", "#"

    .make-me-famous
      %button.respond{"data-username" =>tweet[:user]}
        = image_tag "twitterreply.png"
        %span
          Respond
      <a href="http://twitter.com/share" class="twitter-share-button" data-text='"RT @#{tweet[:user]} #{raw(tweet[:text])}" via ' data-count="none" data-url="http://nerdnearby.com" >Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

