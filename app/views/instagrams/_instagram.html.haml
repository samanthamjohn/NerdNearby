%li.instagram.image-post
  %a{href: instagram[:url]}
    .title.place-name
      %h3
        = image_tag "instagramfavicon.png"
        - if instagram[:checkin_text].blank?
          = "instagram post"
        - else
          = raw(instagram[:checkin_text])
  .post-body
    = image_tag instagram[:image_tag]
  .checkin-text.caption
    = instagram[:place_name]
    = pretty_time(instagram[:time])
    .original= link_to "See original", instagram[:url]
    .make-me-famous
      - instagram_text = instagram[:checkin_text] || "this awesome picture"
      <a href="http://twitter.com/share" class="twitter-share-button" data-url='http://nerdnearby.com' data-text="I found #{instagram[:checkin_text]} nearby #{instagram[:url]}!" data-count="none" data-via="nerdnearby">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

